# ===========================================
# SYNESIS CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values
# Generate secrets with: openssl rand -hex 32

# Environment
SYNESIS_ENV=development
SYNESIS_DEBUG=true
SYNESIS_LOG_LEVEL=INFO

# ===========================================
# DATABASE (PostgreSQL + TimescaleDB)
# ===========================================
DB_PASSWORD=changeme_strong_password_here
DATABASE_URL=postgresql+asyncpg://synesis:${DB_PASSWORD}@localhost:5435/synesis

# n8n compatibility (uses these vars internally)
# Note: These are used by docker-compose for n8n services
# DB_POSTGRESDB_* vars are set in docker-compose.yml

# ===========================================
# REDIS
# ===========================================
REDIS_PASSWORD=changeme_redis_password_here
REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:6379

# ===========================================
# n8n (Optional - start with: docker compose --profile n8n up -d)
# ===========================================
# Generate: openssl rand -hex 32
N8N_ENCRYPTION_KEY=
N8N_USER_MANAGEMENT_JWT_SECRET=

# ===========================================
# TELEGRAM
# ===========================================
# Get from https://my.telegram.org
TELEGRAM_API_ID=
TELEGRAM_API_HASH=
TELEGRAM_SESSION_NAME=synesis
TELEGRAM_CHANNELS=

# ===========================================
# TWITTER/X
# ===========================================
# Using TwitterAPI.io (or similar third-party provider)
TWITTER_API_KEY=
TWITTER_API_BASE_URL=https://api.twitterapi.io
# Comma-separated usernames to follow
TWITTER_ACCOUNTS=DeItaone,KobeissiLetter,Fxhedgers,zerohedge

# ===========================================
# POLYMARKET
# ===========================================
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_PRIVATE_KEY=
POLYMARKET_CHAIN_ID=137

# ===========================================
# LLM
# ===========================================
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
LLM_MODEL=claude-sonnet-4-20250514

# ===========================================
# TRADING (Safety)
# ===========================================
# CRITICAL: Set to true only when ready to execute real trades
TRADING_ENABLED=false
MAX_POSITION_SIZE=100
MIN_EDGE_THRESHOLD=0.05
CONFIDENCE_THRESHOLD=0.7
